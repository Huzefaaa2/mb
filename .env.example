# ===== ENVIRONMENT =====
ENVIRONMENT=development
DEBUG=true

# ===== AZURE CREDENTIALS =====
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# ===== AZURE STORAGE (Blob) =====
AZURE_STORAGE_ACCOUNT_NAME=defaultstoragehackathon
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=usethisone
AZURE_STORAGE_REGION=apac

# ===== AZURE OPENAI =====
AZURE_OPENAI_API_KEY=your-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_GPT35=gpt-35-turbo
AZURE_OPENAI_DEPLOYMENT_GPT4=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ===== AZURE SPEECH-TO-TEXT =====
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=eastus

# ===== DATABRICKS =====
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-pat-token
DATABRICKS_CATALOG=apac
DATABRICKS_SCHEMA=default

# ===== POSTGRESQL =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mb_compass
POSTGRES_USER=mb_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_POOL_SIZE=5

# ===== STREAMLIT =====
STREAMLIT_CLIENT_LOGGING_LEVEL=info
STREAMLIT_LOGGER_LEVEL=info
